{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"files": {
		"ignore": ["./dist/*", "./node_modules/*", "./services/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": []
	}
}
